<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_hd_manage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_page"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/oneHD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/hd_one_title"
            android:textColor="@color/bg_title"
            android:textSize="@dimen/text_size_title" />

        <ImageView
            android:layout_width="265dp"
            android:layout_height="363dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_hd_one" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rlt_format"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_hd_manage"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bg_button_radius"
            android:paddingBottom="10dp"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:paddingTop="10dp"
            android:text="@string/hd_format"
            android:textColor="@color/bg_title"
            android:textSize="@dimen/text_size_title" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/moreHD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/oneHD"
        android:layout_toEndOf="@+id/oneHD"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/text_title_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/hd_more_title"
            android:textColor="@color/bg_title"
            android:textSize="@dimen/text_size_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginTop="60px"
            android:orientation="vertical"
            android:padding="30px"
            android:background="@drawable/bg_format_bar"
            android:layout_weight="0.02"
            android:id="@+id/raid1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="@color/bg_title"
                android:text="@string/hd_raid1"
                android:id="@+id/text_raid1"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/checkbox_raid1"
                android:layout_toEndOf="@+id/checkbox_raid1" />

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:id="@+id/checkbox_raid1"
                android:src="@drawable/btn_check"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:text="@string/hd_raid1_info"
                android:textColor="@color/darker_gray"
                android:layout_below="@+id/text_raid1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/text_raid1"
                android:layout_alignStart="@+id/text_raid1" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginTop="60px"
            android:orientation="vertical"
            android:padding="30px"
            android:background="@drawable/bg_format_bar"
            android:layout_weight="0.02"
            android:id="@+id/radi0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="@color/bg_title"
                android:text="@string/hd_raid0"
                android:id="@+id/text_raid0"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/checkbox_raid0"
                android:layout_toEndOf="@+id/checkbox_raid0" />

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:id="@+id/checkbox_raid0"
                android:src="@drawable/btn_uncheck"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:text="@string/hd_raid0_info"
                android:textColor="@color/darker_gray"
                android:layout_below="@+id/text_raid0"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/text_raid0"
                android:layout_alignStart="@+id/text_raid0" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginTop="60px"
            android:orientation="vertical"
            android:padding="30px"
            android:background="@drawable/bg_format_bar"
            android:layout_weight="0.02"
            android:id="@+id/lvm">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="@color/bg_title"
                android:text="@string/hd_lvm"
                android:id="@+id/text_lvm"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/checkbox_lvm"
                android:layout_toEndOf="@+id/checkbox_lvm" />

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:id="@+id/checkbox_lvm"
                android:src="@drawable/btn_uncheck"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:text="@string/hd_lvm_info"
                android:textColor="@color/darker_gray"
                android:layout_below="@+id/text_lvm"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/text_lvm"
                android:layout_alignStart="@+id/text_lvm" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
